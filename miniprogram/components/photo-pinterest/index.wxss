@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.container {
  position: relative;
  margin: 30rpx 30rpx 0;
}

.container .pic {
  display: inline-block;
}

.container image {
  width: 100%;
  height: 100%;
}

.container image:last-child {
  padding-bottom: 50rpx;
}

.fade_in {
  animation: fadeIn 1s both;
}